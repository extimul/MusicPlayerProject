<Window x:Class="MusicPlayerProject.Views.DialogWindows.CreatePlaylistDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayerProject.Views.DialogWindows"
        WindowStyle="None" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Height="600" Width="800"
        Background="{StaticResource AppBackgroundSecondaryBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create playlist"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   FontSize="{StaticResource FontSizeXXLarge}"
                   Foreground="{StaticResource AppForegroundBrush}"/>
        
        
        
    </Grid>
    
    
