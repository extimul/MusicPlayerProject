<UserControl x:Class="MusicPlayerProject.Views.Controls.NavigationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicPlayerProject.Views.Controls"
             xmlns:navType="clr-namespace:MusicPlayerProject.Core.Enums"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="200">
    <StackPanel>
        <Button Content="HomeView"
                Command="{Binding UpdateCurrentViewModelCommand}"
                CommandParameter="{x:Static navType:ViewType.Home}"/>
        <Button Content="LibraryView"
                Command="{Binding UpdateCurrentViewModelCommand}"
                CommandParameter="{x:Static navType:ViewType.Library}"/>
    </StackPanel>
</UserControl>
