@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SignInViewModel

@{
    Layout = "_Layout";
}

<div class="form-page-container">
    <div class="login-ef-wrapper">
        <div class="form-box blur">
            <div class="fb__header mt-sm-4 mb-sm-1 fw-bold">
                Авторизация
            </div>
            <div class="fb__content-wrapper">
               <form asp-controller="Account" asp-action="SignIn" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                   <div class="form-group mt-sm-4">
                       <label asp-for="Login" class="d-flex justify-content-between">
                           <span>Логин</span>
                           <span class="text-danger" asp-validation-for="Login"></span>
                       </label>
                       <input asp-for="Login" class="form-control" id="Login"/>
                       <small id="loginHelp" style="{ color: dimgray; }">Введите вашу почту или имя пользователя</small>
                   </div>
                   <div class="form-group mt-sm-4">
                       <label asp-for="Password" class="d-flex justify-content-between">
                           <span>Пароль</span>
                           <span class="text-danger" asp-validation-for="Password"></span>
                       </label>
                       <input asp-for="Password" class="form-control" type="password" id="Password"/>
                       <small id="passwordHelp" style="{ color: lightgrey; }">Никому не сообщайте ваш пароль</small>
                   </div>
                   <div class="form-check mt-3">
                       <label asp-for="RememberMe" class="form-check-label">
                           <span>Запомнить меня</span>
                       </label>
                       <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="RememberMe"/>
                   </div>
                   <div class="d-flex flex-column justify-content-center align-items-center">
                       <button class="login-btn mt-lg-4" type="submit">Войти</button>
                       <a class="mt-lg-3" asp-action="SignUp" asp-route-returnUrl="@ViewData["ReturnUrl"]">Создать аккаунт</a>
                   </div>
               </form>
            </div>
        </div>
    </div>
</div>