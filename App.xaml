<Application x:Class="MusicPlayerProject.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:MusicPlayerProject.Views.Pages"
             xmlns:viewModels="clr-namespace:MusicPlayerProject.ViewModels"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
                <views:HomePage/>
            </DataTemplate>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Core/Styles/fonts.xaml"/>
                <ResourceDictionary Source="Core/Styles/colors.xaml"/>
                <ResourceDictionary Source="Core/Styles/elementstyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
